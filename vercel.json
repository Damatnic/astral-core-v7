{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  
  "build": {
    "env": {
      "NODE_ENV": "production",
      "SKIP_TYPE_CHECK": "true",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  }
}