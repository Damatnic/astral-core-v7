# NPM Configuration for Astral Core v7

# Performance optimizations
prefer-offline=true
audit=false
fund=false
save-exact=false

# Package installation
legacy-peer-deps=true
strict-peer-deps=false
auto-install-peers=true

# Registry
registry=https://registry.npmjs.org/

# Logging
loglevel=warn

# Cache
cache-min=86400

# Network
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Prisma specific
prisma_download_build_attempts=5

# Lockfile
package-lock=true
lockfile-version=3

# Engine strict
engine-strict=false

# Scripts
scripts-prepend-node-path=true