{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/types/global.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "tests/**/*", 
    "**/*.test.ts", 
    "**/*.spec.ts", 
    ".next", 
    "out", 
    "dist", 
    "build",
    "playwright.config.ts",
    "next.config.js",
    "tailwind.config.js",
    "jest.config.js"
  ]
}